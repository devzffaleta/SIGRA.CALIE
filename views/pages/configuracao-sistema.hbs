{{!< layouts/main}}

{{#section 'css'}}
    <link rel="stylesheet" href="/css/configuracao.css">
{{/section}}

{{! Conteúdo da Página de Configuração - extraído de test-layout.hbs --}}
<h1>{{pageTitle}}</h1>

{{!-- Grid para os cards de configuração --}}
<div class="config-grid">
    {{!-- Card 1: Gerenciamento de Usuários (link) --}}
    <a href="/gerenciamento-usuarios" class="config-card-link">
        <div class="config-card card-usuarios">
            <i class="fas fa-users card-icon"></i>
            <div class="card-content">
                <h3>Gerenciamento de Usuários</h3>
                <p>Crie, edite e gerencie usuários do sistema, definindo funções e vinculando cooperativas.</p>
            </div>
        </div>
    </a>

    {{!-- Card 5: Grupo de Permissões (movido para cá) --}}
    <a href="/gerenciamento-grupos" class="config-card-link">
        <div class="config-card card-permissoes" style="background-color: #D1FAE5;"> 
            <i class="fas fa-key card-icon" style="color: #047857;"></i> 
            <div class="card-content">
                <h3 style="color: #047857;">Grupo de Permissões</h3>
                <p style="color: #047857;">Crie, edite e gerencie grupo de permissões para os usuários do sistema.</p>
            </div>
        </div>
    </a>

    {{!-- Card 3: Configuração de SGAs --}}
    <a href="/gerenciamento-sgas" class="config-card-link">
        <div class="config-card card-sgas">
            <i class="fas fa-database card-icon"></i> {{!-- Usando fas fa-database como alternativa --}}
            <div class="card-content">
                <h3>Gerenciamento de SGAs</h3>
                <p>Configure as credenciais para integração com a API do SGA, permitindo a importação automática de dados.</p>
            </div>
        </div>
    </a>

    {{!-- Card 4: Gerenciamento de Cooperativas --}}
    <a href="/gerenciamento-cooperativas" class="config-card-link">
        <div class="config-card card-cooperativas">
            <i class="fas fa-building card-icon"></i>
            <div class="card-content">
                <h3>Gerenciamento de Cooperativas</h3>
                <p>Crie, edite e gerencie informações das cooperativas, incluindo dados de contato e configurações.</p>
            </div>
        </div>
    </a>
    
    {{!-- Card 5: Gerenciamento de Regionais --}}
    <a href="/gerenciamento-regionais" class="config-card-link">
        <div class="config-card card-regionais">
            <i class="fas fa-map-marker-alt card-icon"></i>
            <div class="card-content">
                <h3>Gerenciamento de Regionais</h3>
                <p>Crie, edite e gerencie informações das regionais, incluindo dados de contato e configurações.</p>
            </div>
        </div>
    </a>

    {{!-- Card 6: Gerenciamento de Voluntários --}}
    <a href="/gerenciamento-voluntarios" class="config-card-link">
        <div class="config-card card-voluntarios">
            <i class="fas fa-user-plus card-icon"></i>
            <div class="card-content">
                <h3>Gerenciamento de Voluntários</h3>
                <p>Crie, edite e gerencie informações dos voluntários, incluindo dados de contato e configurações.</p>
            </div>
        </div>  
    </a>
</div>

