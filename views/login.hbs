    {{! Script para funcionalidade do modal }}
    <script>
        // Seleciona os elementos do modal
        const forgotPasswordLinks = document.querySelectorAll('.js-forgot-password-link');
        const modalOverlay = document.getElementById('forgotPasswordModal');
        const modalCloseButton = modalOverlay ? modalOverlay.querySelector('.modal-close-button') : null;

        // Função para abrir o modal
        const openModal = (e) => {
            e.preventDefault(); // Impede o link de navegar para #
            if (modalOverlay) {
                modalOverlay.classList.add('active');
            }
        };

        // Função para fechar o modal
        const closeModal = () => {
            if (modalOverlay) {
                modalOverlay.classList.remove('active');
            }
        };

        // Adiciona evento aos links "Esqueceu a senha?"
        forgotPasswordLinks.forEach(link => {
            link.addEventListener('click', openModal);
        });

        // Adiciona evento ao botão de fechar
        if (modalCloseButton) {
            modalCloseButton.addEventListener('click', closeModal);
        }

        // Adiciona evento para fechar clicando fora do modal (no overlay)
        if (modalOverlay) {
            modalOverlay.addEventListener('click', (e) => {
                // Verifica se o clique foi diretamente no overlay (fundo)
                if (e.target === modalOverlay) {
                    closeModal();
                }
            });
        }

        // Adiciona aqui qualquer outro script que já existia para o menu
        // ... (ex: script do menu hambúrguer e do toggle desktop)

    </script>

</body>
</html> 