<div class="main-page-content profile-edit-container">
    <h1>Editar Perfil</h1>

    <form action="/profile/update" method="POST" class="profile-edit-form">
        
        <fieldset>
            <legend>Dados Pessoais</legend>
            <div class="form-row">
                <div class="form-group form-group-half">
                    <label for="nome">Nome Completo</label>
                    <input type="text" id="nome" name="nome" value="{{user.nome}}" required>
                </div>
                <div class="form-group form-group-half">
                    <label for="cpf">CPF</label>
                    <input type="text" id="cpf" name="cpf" value="{{user.cpf}}" disabled> 
                    <small>CPF não pode ser alterado.</small>
                </div>
            </div>
             <div class="form-row">
                <div class="form-group form-group-half">
                    <label for="telefone">Telefone Celular</label>
                    <input type="tel" id="telefone" name="telefone" value="{{user.telefone}}" required>
                </div>
                 <div class="form-group form-group-half">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" value="{{user.email}}" required>
                </div>
            </div>
        </fieldset>

        <fieldset>
            <legend>Endereço</legend>
            <div class="form-row">
                 <div class="form-group form-group-third">
                    <label for="cep">CEP</label>
                    <input type="text" id="cep" name="cep" value="{{user.cep}}" placeholder="Digite o CEP">
                </div>
                 <div class="form-group form-group-two-thirds">
                     <label for="logradouro">Logradouro</label>
                    <input type="text" id="logradouro" name="logradouro" value="{{user.logradouro}}" placeholder="Ex: Rua das Flores">
                 </div>
            </div>
             <div class="form-row">
                 <div class="form-group form-group-third">
                    <label for="numero">Número</label>
                    <input type="text" id="numero" name="numero" value="{{user.numero}}" placeholder="Ex: 123">
                </div>
                 <div class="form-group form-group-third">
                    <label for="complemento">Complemento</label>
                    <input type="text" id="complemento" name="complemento" value="{{user.complemento}}" placeholder="Ex: Apto 101">
                </div>
                 <div class="form-group form-group-third">
                    <label for="bairro">Bairro</label>
                    <input type="text" id="bairro" name="bairro" value="{{user.bairro}}" placeholder="Digite o Bairro">
                </div>
            </div>
             <div class="form-row">
                 <div class="form-group form-group-half">
                    <label for="cidade">Cidade</label>
                    <input type="text" id="cidade" name="cidade" value="{{user.cidade}}" placeholder="Digite a Cidade">
                </div>
                 <div class="form-group form-group-half">
                    <label for="estado">Estado</label>
                     <input type="text" id="estado" name="estado" value="{{user.estado}}" placeholder="Ex: BA">
                 </div>
            </div>
        </fieldset>

        <fieldset>
            <legend>Alterar Senha (Opcional)</legend>
            <div class="form-row">
                <div class="form-group form-group-third">
                    <label for="currentPassword">Senha Atual</label>
                    <input type="password" id="currentPassword" name="currentPassword" placeholder="Deixe em branco se não for alterar">
                </div>
                <div class="form-group form-group-third">
                    <label for="newPassword">Nova Senha</label>
                    <input type="password" id="newPassword" name="newPassword">
                </div>
                <div class="form-group form-group-third">
                    <label for="confirmPassword">Confirmar Nova Senha</label>
                    <input type="password" id="confirmPassword" name="confirmPassword">
                </div>
            </div>
        </fieldset>

        <div class="form-actions">
            <button type="submit" class="btn-save">Salvar Alterações</button>
            <a href="/test-sidebar" class="btn-cancel">Cancelar</a> <!-- Link para voltar -->
        </div>

    </form>
</div> 